source 'https://rubygems.org'

# ---------------------------------------- Base

gem 'rails', '4.2.6'
gem 'unicorn-rails'
gem 'pg', '~> 0.15'

# ---------------------------------------- Assets

gem 'sass-rails', '~> 5.0'

gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'

# ---------------------------------------- View Helpers

gem 'jbuilder', '~> 2.0'

# ---------------------------------------- Console

gem 'rails-console-tweaks'

group :console do
  gem 'wirb'
  gem 'hirb'
  gem 'awesome_print'
end

# ------------------------------------------ Errors

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
end

# ------------------------------------------ Testing

group :development, :test do
  gem 'annotate'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'poltergeist'
  gem 'capybara-screenshot'
end
